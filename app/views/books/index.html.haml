.container.js-booksIndex
  .row
    - @books.each do |book|
      .col.m6
        .card
          %span.card-title{'v-on:click': "setBookInfo(#{book.id})"}
            = book.title

  .row{'v-if': 'bookInfoBool'}
    .col.s12.m12
      .card.pink.lighten-5
        .card-content
          %span.card-title
            {{ bookInfo.title }}
          .detail
            {{ bookInfo.author }}
          .detail
            {{ bookInfo.publisher }}
          .detail
            {{ bookInfo.genre }}




= javascript_pack_tag 'books/index'